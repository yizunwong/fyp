{
  "name": "blockchain",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "deploy": "npx hardhat ignition deploy ./ignition/modules/Deployment.ts --reset --network localhost && npm run export",
    "export": "npx hardhat run scripts/export-frontend.ts --network localhost",
    "deploy:sepolia": "npx hardhat ignition deploy ./ignition/modules/Deployment.ts --reset --network sepolia && npm run export",
    "export:sepolia": "npx hardhat run scripts/export-frontend.ts --network sepolia",
    "test": "npx hardhat test",
    "compile": "npx hardhat compile",
    "dev": "npx hardhat node"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.8",
    "chai": "^5.3.3",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.6",
    "mocha": "^11.7.4",
    "typechain": "^8.3.2",
    "typescript": "~5.8.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.5.0",
    "@chainlink/functions-toolkit": "^0.0.2",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3"
  }
}
