            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "FARMER",
              "RETAILER",
              "GOVERNMENT_AGENCY",
              "ADMIN"
            ]
          }
        },
        "required": [
          "id",
          "email",
          "username",
          "role"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "nric": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "providerId": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "FARMER",
              "RETAILER",
              "GOVERNMENT_AGENCY",
              "ADMIN"
            ]
          }
        },
        "required": [
          "email",
          "username",
          "nric"
        ]
      },
      "TokenPairResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "refresh_token": {
            "type": "string"
          }
        },
        "required": [
          "access_token",
          "refresh_token"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AccessTokenResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          }
        },
        "required": [
          "access_token"
        ]
      },
      "RefreshTokenDto": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string",
            "description": "Refresh token for mobile clients"
          }
        }
      },
      "LogoutResponseDto": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          }
        },
        "required": [
          "success"
        ]
      },
      "ProfileResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "FARMER",
              "RETAILER",
              "GOVERNMENT_AGENCY",
              "ADMIN"
            ]
          }
        },
        "required": [
          "id",
          "email",
          "role"
        ]
      },
      "CreateFarmDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "size": {
            "type": "number",
            "description": "Farm size value"
          },
          "sizeUnit": {
            "type": "string",
            "description": "Unit for the farm size measurement",
            "enum": [
              "HECTARE",
              "ACRE",
              "SQUARE_METER"
            ],
            "example": "HECTARE"
          },
          "produceCategories": {
            "description": "Produce categories grown on the farm",
            "example": [
              "Paddy",
              "Vegetable"
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "documents": {
            "type": "object"
          }
        },
        "required": [
          "name",
          "location",
          "size",
          "sizeUnit",
          "produceCategories",
          "documents"
        ]
      },
      "ProduceListResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string"
          },
          "farmId": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "batchId": {
            "type": "string"
          },
          "certifications": {
            "type": "object"
          },
          "harvestDate": {
            "format": "date-time",
            "type": "string"
          },
          "blockchainTx": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "string",
            "description": "Current lifecycle status of the produce batch",
            "enum": [
              "DRAFT",
              "PENDING_CHAIN",
              "ONCHAIN_CONFIRMED",
              "IN_TRANSIT",
              "VERIFIED",
              "ARCHIVED"
            ],
            "default": "DRAFT"
          },
          "retailerId": {
            "type": "string",
            "nullable": true
          },
          "quantity": {
            "type": "number",
            "description": "Recorded quantity of the produce batch",
            "example": 150
          },
          "unit": {
            "type": "string",
            "description": "Unit used for the recorded quantity",
            "enum": [
              "KG",
              "G",
              "TONNE",
              "PCS",
              "BUNCH",
              "TRAY",
              "L",
              "ML"
            ],
            "default": "KG"
          }
        },
        "required": [
          "id",
          "name",
          "createdAt",
          "farmId",
          "category",
          "batchId",
          "certifications",
          "harvestDate",
          "blockchainTx",
          "status",
          "retailerId",
          "unit"
        ]
      },
      "FarmListRespondDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "size": {
