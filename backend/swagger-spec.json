        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "CommonResponseDto": {
        "type": "object",
        "properties": {
          "statusCode": {
            "type": "number"
          },
          "message": {
            "type": "string"
          },
          "data": {
            "type": "object"
          },
          "count": {
            "type": "number"
          }
        },
        "required": [
          "statusCode",
          "message"
        ]
      },
      "UserResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "FARMER",
              "RETAILER",
              "GOVERNMENT_AGENCY",
              "ADMIN"
            ]
          }
        },
        "required": [
          "id",
          "email",
          "username",
          "role"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "nric": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          },
          "provider": {
            "type": "string"
          },
          "providerId": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "FARMER",
              "RETAILER",
              "GOVERNMENT_AGENCY",
              "ADMIN"
            ]
          }
        },
        "required": [
          "email",
          "username",
          "nric"
        ]
      },
      "TokenPairResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "refresh_token": {
            "type": "string"
          }
        },
        "required": [
          "access_token",
          "refresh_token"
        ]
      },
      "LoginDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "AccessTokenResponseDto": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          }
        },
        "required": [
          "access_token"
        ]
      },
      "RefreshTokenDto": {
        "type": "object",
        "properties": {
          "refresh_token": {
            "type": "string",
            "description": "Refresh token for mobile clients"
          }
        }
      },
      "LogoutResponseDto": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          }
        },
        "required": [
          "success"
        ]
      },
      "ProfileResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "FARMER",
              "RETAILER",
              "GOVERNMENT_AGENCY",
              "ADMIN"
            ]
          }
        },
        "required": [
          "id",
          "email",
          "role"
        ]
      },
      "CreateFarmDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "location": {
            "type": "string"
          },
          "size": {
            "type": "number",
            "description": "Farm size value"
          },
          "sizeUnit": {
            "type": "string",
            "description": "Unit for the farm size measurement",
            "enum": [
              "HECTARE",
              "ACRE",
              "SQUARE_METER"
            ],
            "example": "HECTARE"
          },
          "produceCategories": {
            "description": "Produce categories grown on the farm",
            "example": [
              "Paddy",
              "Vegetable"
            ],
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "documents": {
            "type": "object"
          }
        },
        "required": [
          "name",
          "location",
          "size",
          "sizeUnit",
          "produceCategories",
          "documents"
        ]
      },
      "QRCodeDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique ID of the QR code"
          },
          "produceId": {
            "type": "string",
            "description": "ID of the associated produce"
          },
          "verifyUrl": {
            "type": "string",
            "description": "URL used to generate the QR code"
          },
          "imageUrl": {
            "type": "string",
            "description": "Image URL of the QR code"
          },
          "qrHash": {
            "type": "object",
            "description": "Optional QR hash for verification",
            "nullable": true
          },
          "isPublicQR": {
            "type": "boolean",
            "description": "Indicates if the QR is publicly shareable"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string",
            "description": "Creation timestamp"
          }
        },
        "required": [
          "id",
          "produceId",
          "verifyUrl",
          "imageUrl",
          "isPublicQR",
          "createdAt"
        ]
      },
      "ProduceListResponseDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string"
          },
          "farmId": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "batchId": {
            "type": "string"
          },
          "certifications": {
            "type": "object"
          },
